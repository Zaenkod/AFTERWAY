<div data-search-events-target="list" style="background-color:#F5F0E1">
  <div data-search-events-target="host">
    <% @host_events.each do |event| %>
      <div class="card-event justify-content-between">
        <div class="image">
          <%= link_to event_path(event) do %>
            <%= cl_image_tag Bar.find(event.bar_ids.first).photo.key, crop: :fit, class:"card-event-img"%>
          <% end %>
        </div>
        <div class="card-event-infos">
          <div class="row">
            <div class="col flex-column ">
              <h2> <%= link_to "#{event.title}", event_path(event), class:"text-decoration-none fw-bold", style:"color:white"%></h2>
            </div>
          </div>
          <div class="row d-flex">
            <div class="col d-flex">
              <p>
                <strong>
                  <i class="fa-solid fa-calendar-days"></i> <%= event.date.strftime("%a %e %b") %>

                  <i class="fa-regular fa-clock"></i> <%= event.hour.strftime("%H h %M") %>

                  <i class="fa-solid fa-people-group"></i> <%= event.users.count %>
                </strong>
              </p>
            </div>
          </div>
          <div class="row d-flex">
            <div class="col">
                <p>Status : <strong><%= event.status %></strong></p>
            </div>
          </div>
        </div>
        <div class="icon" style="margin-top: 15px">
          <%= link_to event_path(event) do %>
            <i class="fa-regular fa-circle-right fa-3x" style="color:white"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div data-search-events-target="invit" class="d-none">
    <% @invitation_events.each do |event| %>
      <div class="card-event justify-content-between">
        <div class="image">
          <%= link_to event_path(event) do %>
            <%= cl_image_tag Bar.find(event.bar_ids.first).photo.key, crop: :fit, class:"card-bar-img"%>
          <% end %>
        </div>
        <div class="card-event-infos">
          <div class="row">
            <div class="col flex-column ">
              <h2> <%= link_to "#{event.title}", event_path(event), class:"text-decoration-none fw-bold", style:"color:white"%></h2>
              <p>ðŸ«… Host : <strong><%= event.user.first_name %></strong></p>
            </div>
          </div>
          <div class="row d-flex">
            <div class="col d-flex justify-content-around">
              <p>

              <strong>
                <i class="fa-solid fa-calendar-days"></i> <%= event.date.strftime("%a %e %b") %>

                <i class="fa-regular fa-clock"></i> <%= event.hour.strftime("%H h %M") %>

                <i class="fa-solid fa-people-group"></i> <%= event.users.count %>
              </strong>

              </p>
            </div>
          </div>
          <div class="row d-flex mt-2">
            <div class="col d-flex justify-content-around">
              <p data-controller="answer" data-answer-event-id-value="<%= event.id %>" data-answer-participant-id-value="<%= current_user.find_participant(event).id %>">
                <% unless current_user.find_participant(event).status == "accept" %>
                  <button data-action="click->answer#accept" data-status="accept" data-answer-target="accept" class="btn bg-white rounded-pill btn-sm fw-bolder" style="color:#1E3D59">Accept</button>
                <% end %>
                <% unless current_user.find_participant(event).status == "decline" %>
                  <button data-action="click->answer#decline" data-status="decline" data-answer-target="decline" class="btn btn-outline-light rounded-pill btn-sm fw-bold">Decline</button>
                <% end %>
              <button data-action="click->answer#reset" data-status="reset" data-answer-target="reset" class="btn btn-outline-light rounded-pill btn-sm fw-bold">Reset</button></p>
            </div>
          </div>
        </div>
        <div class="icon">
          <%= link_to event_path(event) do %>
            <i class="fa-regular fa-circle-right fa-3x" style="color:white"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
