<div class="navbar navbar-lewagon sticky-top">
  <div class="container">
    <div class="back-button">
      <%= link_to :back do %>
      <i class="fa-solid fa-circle-arrow-left fa-2xl" style="color: #ffffff;"></i>
      <% end %>
    </div>

      <div class="form-check form-switch"  data-action="click->toggle#fire">
        <label class="form-check-label" for="flexSwitchCheckDefault">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" data-search-events-target="button" placeholder="My events" checked>
          <span data-toggle-target="map">Map</span>
          <span class="d-none" data-toggle-target="list">List</span>
        </label>
      </div>

    <div class="d-flex align-items-center">
      <div class="<%= 'd-none ' if @notification_counter == 0 %> me-2" data-notifications-subscription-target='counter'>
        <%= @notification_counter %>
      </div>
      <%= link_to "", root_path, class: "fa-solid fa-bell fa-2xl", style:"color: #ffffff"%>
    </div>
  </div>

  </div>
</div>
