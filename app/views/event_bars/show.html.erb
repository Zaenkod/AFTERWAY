 <%= render "shared/navbar" %>
<div class="container">
  <section class="mx-auto">

    <div class="card-bar">
      <div class="align-items-end bg-image booking-div d-flex hover-overlay justify-content-center pb-4 ripple" data-mdb-ripple-color="light">
        <div class="centered"><%= @event_bar.bar.name %></div>
      </div>
        <div class="card-body-bar">
          <p><i class="fa-solid fa-location-crosshairs"></i><%= @event_bar.bar.address %></p>
          <h3 class="card-title font-weight-bold"><p><%= @event_bar.bar.name %></p></h3>
            <div class="d-flex justify-content-around">
              <div class="Stars" style="--rating: 2.3;" aria-label="Rating of this product is 2.3 out of 5.">
              </div>
                <p class="text-muted"><%= @event_bar.bar.rating %></p>
            </div>
              <div class="card-bar-description d-flex justify-content-around align-items-center">
                <p class="text-center"><i class="fa-solid fa-calendar-days"></i> <%= @event_bar.event.date.strftime("%a %e %b") %></p>
                <p>|</p>
                <p class="text-center"><i class="fa-regular fa-clock"></i> <%= @event_bar.event.hour.strftime("%H h %M") %></p>
              </div>
                <p class="text-center m-3">Status : <%= @event_bar.status %></p>
                <div class="text-center">
                    <%= simple_form_for (@event_bar) do |f| %>
                      <%= f.hidden_field :status, value: "booked"%>
                      <%= f.button :submit, "Book this bar 🎊", class: "btn btn-small-white mb-3" %>
                    <% end %>
                </div>
        </div>
    </div>
  </section>
</div>
<div><%= render "shared/homefooter" %></div>
